    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Berkshire+Swash&display=swap" rel="stylesheet">
    <title>Sprig</title>

</head>

<body>




<div id="signup" class="mt-4">
  <p class="signup-title">Create Account</p>
<form class="form" action="/signup" method="POST">

  <div class="form-group row">
    <div class="col-sm-10 d-inline-flex p-2">
      <input type="text" class="form-control p-2" name="fname" id="firstname"  placeholder="First Name"> <i class="fa-solid fa-user"></i>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 d-inline-flex p-2">
    <input type="text" class="form-control p-2" name="lname" id="lastname"  placeholder="Last Name"> <i class="fa-solid fa-user"></i>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 d-inline-flex p-2">
    <input type="text" class="form-control p-2" name="username"id="username"  placeholder="Username"> <i class="fa-regular fa-user"></i>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 d-inline-flex p-2">
    <input type="email" class="form-control p-2" name="email"id="exampleInputEmail1" placeholder="Email"> <i class="fa-solid fa-envelope"></i>
    </div>
  </div>

  <!-- <div class="form-group row">
    <div class="col-sm-10 d-inline-flex p-2">
    <input type="email" class="form-control p-2" name="fname"id="exampleInputEmail1" placeholder="Confirm Email"> <i class="fa-regular fa-envelope"></i>
    </div>
  </div> -->

  <div class="form-group row">
    <div class="col-sm-10 d-inline-flex p-2">
    <input type="number" class="form-control p-2" name="age"id="age"  placeholder="Age"> <i class="fa-solid fa-check"></i>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 d-inline-flex p-2">
    <input type="text" class="form-control p-2" name="city"id="city"  placeholder="City"> <i class="fa-solid fa-city"></i>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 d-inline-flex p-2">
    <input type="text" class="form-control p-2" name="state"id="state"  placeholder="State"> <i class="fa-solid fa-flag-usa"></i>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 d-inline-flex p-2">
    <input type="password" class="form-control p-2" name="password"id="exampleInputPassword1" placeholder="Password"> <i class="fa-solid fa-shield"></i>
    </div>
  </div>

  <!-- <div class="form-group row">
    <div class="col-sm-10 d-inline-flex p-2">
    <input type="password" class="form-control p-2" name="fname"id="exampleInputPassword1" placeholder="Confirm Password"> <i class="fa-solid fa-shield-halved"></i>
    </div>
  </div> -->

  <a href="#" >Already have an account? LOG IN</a>
  <div>
  <button type="submit" class="btn btn-primary" style="background-color: #324132; color: white;">Register</button>
  </div>
</form>
</div>


<h3>Sprig</h3>  
<h5>by Justin, Ashley, and Maisie</h5>


