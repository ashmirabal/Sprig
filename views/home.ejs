    <div class="container" id="LgCard">
      <div class="row mt-5">
        <div class="col-md-6 offset-md-3">

          <h1>Home Page</h1>

          <span>
            <a href="/home/new" class="greenBtn">New Post</a>
          </span>

          <% posts.forEach(post=> { %>
            <div class="card mb-4" style="width: 30rem;" id="Card">
              <div class="card-body">
                <h6>
                  <%=post.date%>
                </h6>
                <h4 class="card-title">
                  <%= post.title %>
                </h4>
                <p class="card-text">
                  <%= post.description %>
                </p>
                <a href="home/<%= post._id %>" class="btn btn-dark">View More</a>

              </div>
            </div>
            <% }); %>

        </div>
      </div>
    </div>

