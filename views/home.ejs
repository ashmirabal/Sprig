
<%- include('./partials/header.ejs', {title: "Home"})%>

<%- include('./partials/header.ejs')%>
  <%- include('./partials/navbar.ejs')%>

 
    <div class="container" id="LgCard">
      <div class="row mt-5">
        <div class="col-md-6 offset-md-3">

          <h1>Home Page</h1>

          <span>
            <a href="/home/new" class="greenBtn">New Post</a>
          </span>

          <% posts.forEach(post=> { %>
            <div class="card mb-4" style="width: 30rem;" id="Card">
              <div class="card-body">
                <h6>
                  <%=post.date%>
                </h6>
                <h4 class="card-title">
                  <%= post.title %>
                </h4>
                <p class="card-text">
                  <%= post.category %>
                </p>
                <p class="card-text">
                  <%= post.description %>
                </p>
                <a href="home/showPost/<%= post._id %>" class="info-editBtn">View More</a>

              </div>
            </div>
            <% }); %>

        </div>
      </div>
    </div>

    <%- include('./partials/footer.ejs')%>

